    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Html.Sitecore().Field("Page Title", new { DisableWebEdit = true })</title>
    <meta name="description" content="@Html.Sitecore().Field("Meta Description",new { DisableWebEdit = true })" />
    <meta name="keywords" content="@Html.Sitecore().Field("Meta Keywords",new { DisableWebEdit = true })" />
    <meta property="og:url" content="@SitecoreUtil.GetItemUrlWithServer(Sitecore.Context.Item)" />
    <meta property="og:title" content="@Html.Sitecore().Field("OG Title",new { DisableWebEdit = true })" />
    <meta property="og:description" content="@Html.Sitecore().Field("OG Description",new { DisableWebEdit = true })" />
    <meta property="og:image" content="@Sitecore.Context.Item.GetImageFieldURL("OG Image")" />
    <meta name="twitter:title" content="@Html.Sitecore().Field("Twitter Title",new { DisableWebEdit = true })">
    <meta name="twitter:description" content="@Html.Sitecore().Field("Twitter Description",new { DisableWebEdit = true })">
    <meta name="twitter:image" content="@Sitecore.Context.Item.GetImageFieldURL("Twitter Image")">
    <meta name="twitter:site" content="@Html.Sitecore().Field("Twitter Site",new { DisableWebEdit = true })">
    <meta name="twitter:creator" content="@Html.Sitecore().Field("Twitter Creator",new { DisableWebEdit = true })">
    @Html.RenderFormStyles()
    @Html.RenderFormScripts()
    @*<link rel="stylesheet" href="/assets/css/vendor.css" />*@

    @*@if (settingsItem != null)
        {
            <link rel="icon" type="image/png" href="@settingsItem.GetImageFieldURL("Fav Icon")">
